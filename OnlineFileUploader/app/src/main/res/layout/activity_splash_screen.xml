<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.bulbul.onlinefileuploader.SplashScreen">

    <TextView
        android:id="@+id/splashTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Virtual Learning "
        android:textSize="23sp"
        android:textColor="#000000"/>


    <ImageView
        android:id="@+id/splashLogoId"
        android:background="@drawable/online"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <ProgressBar
        android:progressBackgroundTint="#f9f9f9"
        android:progressTint="#02b3b9"
        android:id="@+id/progressbarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        style="@android:style/Widget.ProgressBar.Horizontal"/>

    <TextView
        android:id="@+id/splashSubTitleId"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="An Effective Way to Learn Online"
        android:textColor="#000000"
        android:textSize="18sp" />



</LinearLayout>
