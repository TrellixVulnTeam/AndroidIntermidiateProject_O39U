<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bulbul.universityfinder.TestActivity">

    <TextView
        android:textAlignment="center"
        android:background="#a6cc87"
        android:text=" Student Info List"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:textSize="18sp"
        android:background="#a9cc90"
        android:textColor="#fff"
        android:textAlignment="center"
        android:id="@+id/nameOfArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ListView
        android:paddingTop="25dp"
        android:id="@+id/trackListview"
        android:background="#5da156"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
